<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cse110.jamwithme.Camera">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX = "5"
        android:scaleY = "5"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:id="@+id/ivProfile2"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ivProfile2"
        android:layout_toStartOf="@+id/ivProfile2"
        android:id="@+id/uploadButton"
        android:backgroundTint="?android:attr/statusBarColor"
        android:textColor="@android:color/white" />

    <Button
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/uploadButton"
        android:layout_toRightOf="@+id/ivProfile2"
        android:layout_toEndOf="@+id/ivProfile2"
        android:id="@+id/cancelButton"
        android:backgroundTint="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_alignTop="@+id/ivProfile2"
        android:layout_alignLeft="@+id/ivProfile2"
        android:layout_alignStart="@+id/ivProfile2"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="25dp"
        android:id="@+id/imageButton" />
</RelativeLayout>
