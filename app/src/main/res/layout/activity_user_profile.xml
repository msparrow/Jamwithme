<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cse110.jamwithme.UserProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX = "5"
        android:scaleY = "5"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:id="@+id/ivProfile2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:text="About Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVAboutMe"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp" />

    <Button
        android:text="@string/addI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Profile_add_botton"
        android:backgroundTint="?attr/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_above="@+id/tVAboutMe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:text="@string/addjams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_my_jams"
        android:backgroundTint="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/Profile_add_botton"
        android:layout_alignBottom="@+id/Profile_add_botton"
        android:layout_toRightOf="@+id/ivProfile2"
        android:layout_toEndOf="@+id/ivProfile2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Profile_Username"
        android:hint="Username"
        android:textSize="18sp"
        android:layout_above="@+id/ratingBar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/Profile_add_botton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/iBTakePic"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignTop="@+id/ivProfile2"
        android:layout_toRightOf="@+id/Profile_add_botton"
        android:layout_toEndOf="@+id/Profile_add_botton"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textPersonName"
        android:ems="10"
        android:id="@+id/eTPersonalBiography"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLength = "500"/>

    <TextView
        android:text="Experience Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVExperience"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Profile_Username"
        android:layout_alignBottom="@+id/ratingBar2"
        android:layout_toLeftOf="@+id/ratingBar2"
        android:layout_toStartOf="@+id/ratingBar2" />

</RelativeLayout>
