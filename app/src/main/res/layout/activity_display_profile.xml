<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_display_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="cse110.jamwithme.ProfileDisplay">

    <ImageView
        android:scaleX="5"
        android:scaleY="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:id="@+id/profile_pic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:id="@+id/name"
        android:text="@string/uname"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/addI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instruments"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/rating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/jams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_jams"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/instruments"
        android:layout_alignBottom="@+id/instruments"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/pbio"
        android:layout_toEndOf="@+id/pbio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:id="@+id/pbio"
        android:text="@string/bio"
        android:maxLength="500"
        android:layout_below="@+id/instruments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_marginTop="22dp"
        android:id="@+id/editProf"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/profile_pic"
        android:layout_alignLeft="@+id/profile_pic"
        android:layout_alignStart="@+id/profile_pic"/>

    <TextView
        android:text="@string/exp_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exp"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/instruments"
        android:layout_toLeftOf="@+id/rating"
        android:layout_toStartOf="@+id/rating"/>

</RelativeLayout>