<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_jams_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cse110.jamwithme.add_jams_activity">

    <TextView
        android:text="Select profile jam for other users to hear!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_amj"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />


    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/play_green_cropped"
        android:id="@+id/ib_play_amj"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ib_stop_amj"
        android:layout_toStartOf="@+id/ib_stop_amj" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/green_stop"
        android:id="@+id/ib_stop_amj"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:layout_alignTop="@+id/ib_play_amj"
        android:layout_alignRight="@+id/title_amj"
        android:layout_alignEnd="@+id/title_amj" />

    <Button
        android:text="Select Jam"
        android:layout_width="200dp"
        android:id="@+id/select_amj"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/title_amj"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bNext2"
        android:background="?android:attr/statusBarColor"
        android:textColor="@android:color/white"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Delete Jam"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/delet_amj"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_marginTop="43dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/ib_stop_amj"
        android:layout_alignLeft="@+id/select_amj"
        android:layout_alignStart="@+id/select_amj" />

    <TextView
        android:text="Nothing to play..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curr_jam"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginBottom="6dp"
        android:layout_above="@+id/ib_play_amj"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
